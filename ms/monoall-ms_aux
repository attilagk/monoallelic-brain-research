\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{the best fitting data transformation, link function and error distribution was selected for a fixed set of terms in the linear predictor (see Methods) for both global and local models}}{9}}
\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{global models (considering genes jointly) gave stronger results than local ones because the former allows gene-wise data units to borrow statistical strength from each other}}{9}}
\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{terms in the linear predictor that significantly improved model fit are mainly technical ones; including them in the model therefore corrects for a large technical noise}}{9}}
\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{the most important biological term is 'Gene', meaning that allelic bias varies greatly among imprinted genes regardless other variables}}{9}}
\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{the remaining biological terms that significantly improving model fit are 'Ancestry.1:Gene' and 'Age:Gene', suggesting that genes differ not only in their mean/overall allelic bias but also in how bias depends on Ancestry.1 and Age; in other words, Ancestry.1 and Age has a differential effect on allelic bias when comparing genes}}{9}}
\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{Ancestry.1 and Age alone was found to have little if any effect meaning that genes do not share a common pattern of how allelic bias depends on these variables}}{9}}
\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{Dx (SCZ) and Gender had essentially no effect alone or in combination with 'Gene' (only 'Gender:Gene' lead to minor improvement in fit)}}{9}}
\@writefile{loc}{\contentsline {subsection}{Added: \truncate {.3\textwidth }{TODO: imprinted gene clusters and other biological effect ('Gene:Cluster', Age:Cluster, Ancestry.1:Cluster)}}{9}}
