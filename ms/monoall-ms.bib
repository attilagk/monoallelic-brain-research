title = {{Autosomal monoallelic expression in the mouse}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22348269 https://www.ncbi.nlm.nih.gov/pmc/articles/PMC3334567/ https://genomebiology.biomedcentral.com/articles/10.1186/gb-2012-13-2-r10},
